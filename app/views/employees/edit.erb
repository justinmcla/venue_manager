<h1>Edit Employee</h1>
<form method = "POST" action = "/employees/<%= @employee.id %>">
<input type = "hidden" id = "hidden" name = "_method" value = "PATCH">
<table>
    <tr>
        <td><label for = "first_name">First Name:</label></td>
        <td><input type = "text" id = "first_name" name = "first_name" value = "<%= @employee.first_name %>"></td>
    </tr>
    <tr>
        <td><label for = "last_name">Last Name:</label></td>
        <td><input type = "text" id = "last_name" name = "last_name" value = "<%= @employee.last_name %>"></td>
    </tr>
    <tr>
        <td><label for = "email">Email:</label></td>
        <td><input type = "text" id = "email" name = "email" value = "<%= @employee.email %>"></td>
    </tr>
    <tr>
        <td><label for = "phone">Phone:</label></td>
        <td><input type = "text" id = "phone" name = "phone" value = "<%= @employee.phone %>"></td>
    </tr>
    <tr>
        <td><label for = "start_date">Start Date:</label></td>
        <td><input type = "date" id = "start_date" name = "start_date" value = "<%= @employee.start_date %>"></td>
    </tr>
    <tr>
        <td><label for = "end_date">End Date:</label></td>
        <td><input type = "date" id = "end_date" name = "end_date" value = "<%= @employee.end_date %>">
    </tr>
    <tr>
        <td><label for = "rate">Rate of Pay:</label></td>
        <td>$<input type = "text" id = "rate" name = "rate" value = "<%= @employee.rate %>"></td>
    </tr>
</table>
<input type = "submit" id = "submit" value = "Update">
</form>
