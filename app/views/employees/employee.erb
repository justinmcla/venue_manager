<h1>Employee Information</h1>
<table id = "employee_table">
    <tr>
        <td>Name:</td>
        <td><%= @employee.first_name %> <%= @employee.last_name %></td>
    </tr>
    <tr>
        <td>Email:</td>
        <td><%= @employee.email %></td>
    </tr>
    <tr>
        <td>Phone:</td>
        <td><%= @employee.phone %></td>
    </tr>
    <tr>
        <td>Start Date:</td>
        <td><%= @employee.start_date %></td>
    </tr>
    <% if @employee.active == false %>
    <tr>
        <td>End Date:</td>
        <td><%= @employee.end_date %></td>
    </tr>
    <% end %>
    <tr>
        <td>Rate of Pay:</td>
        <td>$<%= '%.2f' % @employee.rate %></td>
    </tr>
    </table>
    <table>
    <tr>
        <td class = "center"><a href = "/employees/<%= @employee.id %>/edit" class = "btn btn-light btn-sm" role = "button">Edit</a></td>
        <td class = "center"><a href = "/employees/<%= @employee.id %>/delete" class = "btn btn-light btn-sm" role = "button">Delete</a></td>
    </tr>
    </table>
<h3>Shift History</h3>
<p>
<% @employee.bookings.each do |booking| %>
    <a href = "/bookings/<%= booking.id %>"><%= booking.date %> - <%= booking.tenant.org_name %></a><br>
<% end %>
</p>