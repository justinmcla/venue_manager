<h3>New Employee</h3>
<form method = "POST" action = "/employees/new">
    <input type = "hidden" id = "hidden" name = "active" value = "true">
    <div class = "form-row">
        <div class = "form-group col-md-6">
            <label for = "first_name">First Name</label>
            <input type = "text" id = "first_name" name = "first_name" class ="form-control" required = "required">
        </div>
        <div class = "form-group col-md-6">
            <label for = "last_name">Last Name</label>
            <input type = "text" id = "last_name" name = "last_name" class = "form-control" required = "required">
        </div>
    </div>
    <div class = "form-row">
        <div class = "form-group col-md-6">
            <label for = "email">Email</label>
            <input type = "text" id = "email" name = "email" pattern = ".+@.+\..+" placeholder = "e.g. mail@mail.com" class ="form-control">
        </div>
        <div class = "form-group col-md-6">
            <label for = "phone">Phone</label>
            <input type = "text" id = "phone" name = "phone" pattern = "\(?\d\d\d\)?(\s?|-?)\d\d\d-?\d\d\d\d" placeholder = "e.g. 555-555-5555" class ="form-control">
        </div>
    </div>
    <div class = "form-row">
        <div class = "form-group col-md-6">
            <label for = "start_date">Start Date</label>
            <input type = "date" id = "start_date" name = "start_date" pattern = "\d\d\d\d-\d\d-\d\d" placeholder = "YYYY-MM-DD" class ="form-control" required = "required">
        </div>
        <div class = "form-group col-md-6">
            <label for = "rate">Rate of Pay</label>
            <input type = "text" id = "rate" name = "rate" pattern = "\d+.\d\d" placeholder = "e.g. 15.00" class ="form-control">
        </div>
    </div>
    <button type = "submit" id = "submit" class = "btn btn-light btn-sm">Create</button>
</form>
