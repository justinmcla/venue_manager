<h3>Inventory Settings</h3>
<form method = "POST" action = "/venues/<%= @venue.id %>/inventories/<%= @inventory.id %>">
<input type = "hidden" id = "hidden" name = "_method" value = "PATCH">
    <div class = "form-group">
        <label for = "name">Name</label>
        <input type = "text" class = "form-control" id = "name" name = "name" value = "<%= @inventory.name %>">
    </div>
    <div class = "form-group">
        <label for = "description">Notes</label>
        <textarea id = "description" class = "form-control" name = "description"><%= @inventory.description %></textarea>
    </div>
    <button type = "submit" id = "submit" class = "btn btn-light btn-sm">Update</button>
</form>
