<h1>Edit Inventory Settings</h1>
<form method = "POST" action = "/venues/<%= @venue.id %>/inventories/<%= @inventory.id %>">
<input type = "hidden" id = "hidden" name = "_method" value = "PATCH">
<table>
    <tr>
        <td><label for = "name">Name:</label></td>
        <td><input type = "text" id = "name" name = "name" value = "<%= @inventory.name %>"></td>
    </tr>
    <tr>
        <td><label for = "description">Notes:</label></td>
        <td><textarea id = "description" name = "description"><%= @inventory.description %></textarea></td>
    </tr>
</table>
<input type = "submit" id = "submit" value = "Update">
</form>
