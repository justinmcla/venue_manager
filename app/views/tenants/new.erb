<h1>Create New Tenant</h1>
<form method = "POST" action = "/tenants/new">
<h3>Organization Information</h3>
<table>
    <tr>
        <td><label for = "org_name">Name:</label></td>
        <td><input type = "text" id = "org_name" name = "org_name"></td>
    </tr>
    <tr>
        <td>Type:</td>
        <td><input type = "radio" id = "commercial" name = "org_type" value = "Commercial">
            <label for = "commercial">Commercial</label>
            <input type = "radio" id = "non-profit" name = "org_type" value = "Non-Profit">
            <label for = "non-profit">Non-Profit</label>
            <input type = "radio" id = "internal" name = "org_type" value = "Internal">
            <label for = "internal">Internal</label></td>
    </tr>
    <tr>
        <td><label for = "org_address">Address:</label></td>
        <td><input type = "text" id = "org_address" name = "org_address"></td>
    </tr>
    <tr>
        <td><label for = "org_city">City:</label></td>
        <td><input type = "text" id = "org_city" name = "org_city"></td>
    </tr>
    <tr>
        <td><label for = "org_state">State:</label></td>
        <td><input type = "text" id = "org_state" name = "org_state" pattern = "\b[A-Z][A-Z]\b" placeholder = "e.g. DC, TX, NY"></td>
    </tr>
    <tr>
        <td><label for = "org_zip">Zip:</label></td>
        <td><input type = "text" id = "org_zip" name = "org_zip" pattern = "\d\d\d\d\d(-\d\d\d\d)?" placeholder = "e.g. 00000 or 00000-0000"></td>
    </tr>
</table>
<h3>Point of Contact</h3>
<table>
    <tr>
        <td><label for = "poc_name">Name:</label></td>
        <td><input type = "text" id = "poc_name" name = "poc_name"></td>
    </tr>
    <tr>
        <td><label for = "poc_phone">Phone:</label></td>
        <td><input type = "text" id = "poc_phone" name = "poc_phone" pattern = "\(?\d\d\d\)?(\s?|-?)\d\d\d-?\d\d\d\d" placeholder = "e.g. 555-555-5555"></td>
    </tr>
    <tr>
        <td><label for = "poc_email">Email:</label></td>
        <td><input type = "text" id = "poc_email" name = "poc_email" pattern = ".+@.+\..+" placeholder = "e.g. mail@mail.com"></td>
    </tr>
</table>
<button type = "submit" id = "submit" class = "btn btn-light btn-sm">Create</button>
</form>
