<h1>Tenant Information</h1>
<h3><%= @tenant.org_name %></h3>
<p><%= @tenant.org_address %><br>
<%= @tenant.org_city %>, <%= @tenant.org_state %> <%= @tenant.org_zip %><br><br>
Type: <%= @tenant.org_type %></p>
<table>
    <tr>
        <td>POC:</td>
        <td><%= @tenant.poc_name %></td>
    </tr>
    <tr>
        <td>Phone:</td>
        <td><%= @tenant.poc_phone %></td>
    </tr>
    <tr>
        <td>Email:</td>
        <td><%= @tenant.poc_email %></td>
    </tr>
</table>
<p><a href = "/tenants/<%= @tenant.id %>/edit">Edit</a> <a href = "/tenants/<%= @tenant.id %>/delete">Delete</a></p>

<h3>Upcoming Bookings</h3>
            <% if @tenant.bookings.empty? %>
                <p>No upcoming bookings. Create bookings <a href = "/bookings/new">here</a>.</p>
            <% else %>
                <table>
                <% @tenant.bookings.sort_by { |b| b.date }.each do |booking| %>
                    <% if booking.date > Date.today %>
                        <tr>
                            <td><a href = "/bookings/<%= booking.id %>"><%= booking.date %> - <%= booking.venue.name %></a></td>
                        </tr>
                    <% end %>
                <% end %>
                </table>
            <% end %>
        <h3>Previous Bookings</h3>
            <% if @tenant.bookings.map { |b| b.date < Date.today }.empty? %>
                <p>No previous bookings.</p>
            <% else %>
                <table>
                <% @tenant.bookings.sort_by { |b| b.date }.each do |booking| %>
                    <% if booking.date < Date.today %>
                        <tr>
                            <td><a href = "/bookings/<%= booking.id %>"><%= booking.date %> - <%= booking.venue.name %></a></td>
                        </tr>
                    <% end %>
                <% end %>
                </table>
            <% end%>

<p><a href = "/bookings/new">Create New Booking</a></p>