<h1><%= @venue.name %></h1>
<p><%= @venue.address1 %><br>
<%= @venue.address2 %><br>
<%= @venue.city %>, <%= @venue.state %> <%= @venue.zip %></p>
<p>Configuration: <%= @venue.stage_type %><br>
Seats: <%= @venue.seats %></p>
<p>Greenrooms: <%= @venue.greenrooms %><br>
Dressing Rooms: <%= @venue.dressing_rooms %></p>
<table>
    <tr>
        <td><form method = "GET" action = "/venues/<%= @venue.id %>/edit">
            <button type = "submit" class = "btn btn-light btn-sm">Edit</button>
            </form></td>
        <td><form method = "GET" action = "/venues/<%= @venue.id %>/delete">
            <button type = "submit" class = "btn btn-light btn-sm">Delete</button>
            </form></td>
    </tr>
</table>

<h2>Bookings</h2>
<p>
<% @venue.bookings.sort_by { |b| b.date }.each do |booking| %>
    <a href = "/bookings/<%= booking.id %>"><%= booking.date %> - <%= booking.tenant.org_name %></a><br>
<% end %>
</p>
<form method = "GET" action = "/bookings/new">
<button type = "submit" class = "btn btn-light btn-sm">Create New Booking</button>
</form>

<h2>Inventories</h2>
<p>
<% @venue.inventories.each do |inventory| %>
    <a href = "/venues/<%= @venue.id %>/inventories/<%= inventory.id %>"><%= inventory.name %></a><br>
<% end %>
</p>
<form method = "GET" action = "/venues/<%= @venue.id %>/inventories/new">
<button type = "submit" class = "btn btn-light btn-sm">Create New Inventory</button>
</form>
