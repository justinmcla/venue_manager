<h1><%= @venue.name %></h1>
<p><%= @venue.address1 %><br>
<%= @venue.address2 %><br>
<%= @venue.city %>, <%= @venue.state %> <%= @venue.zip %></p>
<p>Configuration: <%= @venue.stage_type %><br>
Seats: <%= @venue.seats %></p>
<p>Greenrooms: <%= @venue.greenrooms %><br>
Dressing Rooms: <%= @venue.dressing_rooms %></p>
<table>
    <tr>
        <td><a href = "/venues/<%= @venue.id %>/edit" class = "btn btn-light btn-sm" role = "button">Edit</a></td>
        <td><a href = "/venues/<%= @venue.id %>/delete" class = "btn btn-light btn-sm" role ="button">Delete</a></td>
    </tr>
</table>
<br>
<h2>Bookings</h2>
<p>
<% @venue.bookings.sort_by { |b| b.date }.each do |booking| %>
    <a href = "/bookings/<%= booking.id %>"><%= booking.date %> - <%= booking.tenant.org_name %></a><br>
<% end %>
</p>
<a href = "/bookings/new" class = "btn btn-light btn-sm" role = "button">Create New Booking</a><br>
<h2>Inventories</h2>
<p>
<% @venue.inventories.each do |inventory| %>
    <a href = "/venues/<%= @venue.id %>/inventories/<%= inventory.id %>"><%= inventory.name %></a><br>
<% end %>
</p>
<a href = "/venues/<%= @venue.id %>/inventories/new" class = "btn btn-light btn-sm" role ="button">Create New Inventory</a>