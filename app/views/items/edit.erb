<h1>Edit Item</h1>
<form method = "POST" action = "/venues/<%= @venue.id %>/inventories/<%= @inventory.id %>/items/<%= @item.id %>">
<input type = "hidden" id = "hidden" name = "_method" value = "PATCH">
<table>
    <tr>
        <td><label for = "name">Name:</label></td>
        <td><input type = "text" id = "name" name = "name" value = "<%= @item.name %>"></td>
    </tr>
    <tr>
        <td><label for = "category">Category:</label></td>
        <td><input type = "text" id = "category" name = "category" value = "<%= @item.category %>"></td>
    </tr>
    <tr>
        <td><label for = "quantity">Quantity:</label></td>
        <td><input type = "number" id = "quantity" name = "quantity" value = "<%= @item.quantity %>"></td>
    </tr>
    <tr>
        <td><label for = "description">Description:</label></td>
        <td><textarea id = "description" name = "description"><%= @item.description %></textarea></td>
    </tr>
</table>
<button type = "submit" id = "submit" class = "btn btn-light btn-sm">Update</button>
</form>
