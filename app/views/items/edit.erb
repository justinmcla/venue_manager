<h1>Edit Item</h1>
<form method = "POST" action = "/items/<%= @item.id %>">
<input type = "hidden" id = "hidden" name = "_method" value = "PATCH">
<table>
    <tr>
        <td><label>Name:</label></td>
        <td><input type = "text" id = "name" name = "name" value = "<%= @item.name %>"></td>
    </tr>
    <tr>
        <td><label>Category:</label></td>
        <td><input type = "text" id = "category" name = "category" value = "<%= @item.category %>"></td>
    </tr>
    <tr>
        <td><label>Quantity:</label></td>
        <td><input type = "number" id = "quantity" name = "quantity" value = "<%= @item.quantity %>"></td>
    </tr>
    <tr>
        <td><label>Description:</label></td>
        <td><textarea id = "description" name = "description"><%= @item.description %></textarea></td>
    </tr>
</table>
<input type = "submit" id = "submit" value = "Update Item">
</form>